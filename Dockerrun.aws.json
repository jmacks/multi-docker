{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "clientContainer",
      "image": "jeffmacks/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "serverContainer",
      "image": "jeffmacks/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "workerContainer",
      "image": "jeffmacks/multi-client",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginxContainer",
      "image": "jeffmacks/multi-nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["clientContainer", "serverContainer"],
      "memory": 128
    }
  ]
}
